<?xml version='1.0' encoding='utf-8'?>
<widget id="com.covidTrackerIndia.surajmandalcell" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Covid-19 India</name>
    <description>
        A covid-19 pandemic tracker for India.
    </description>
    <author email="cruelplatypus67@gmail.com" href="http://surajmandalcell.github.io">
        Surajmandalcell
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="www/assets/icons/icon-72x72.png" density="ldpi" />
        <icon src="www/assets/icons/icon-72x72.png" density="mdpi" />
        <icon src="www/assets/icons/icon-72x72.png" density="hdpi" />
        <icon src="www/assets/icons/icon-96x96.png" density="xhdpi" />
        <icon src="www/assets/icons/icon-144x144.png" density="xxhdpi" />
        <icon src="www/assets/icons/icon-192x192.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
